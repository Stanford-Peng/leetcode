Kang - [Add Two Numbers](https://leetcode.com/problems/add-two-numbers/)
```
/**
 * Definition for singly-linked list.
 * function ListNode(val, next) {
 *     this.val = (val===undefined ? 0 : val)
 *     this.next = (next===undefined ? null : next)
 * }
 */
/**
 * @param {ListNode} l1
 * @param {ListNode} l2
 * @return {ListNode}
 */
var res;
var addTwoNumbers = function(l1, l2) {
    res = new ListNode();
    let result = res;
    addTwoDigits(l1, l2, false);
    return result;
};

function addTwoDigits(l1, l2, remainder){
    if(!l1){
        return finish(l2, remainder);
    } else if (!l2){
        return finish(l1, remainder);
    }
    let sum = l1.val + l2.val;
    if ( remainder ) {
        sum += 1;
        remainder = false;
    }
    if ( sum > 9 ){
        sum = sum % 10;
        remainder = true;
    }
    res.val = sum;
    if (l1.next || l2.next){
        res.next = new ListNode();
        res = res.next;
        addTwoDigits(l1.next, l2.next, remainder);
    } else {
        remainder && (res.next = new ListNode(1));
    }
}

function finish(n, remainder){
    res.val = n.val;
    if (remainder){
        res.val = n.val + 1;
        remainder = false;
    }
    if ( res.val == 10 ){
        remainder = true;
        res.val = 0;
    }
    if(n.next){
        res.next = new ListNode();
        res = res.next;
        finish(n.next, remainder);
    } else {
        remainder && (res.next = new ListNode(1));
    }
}
```
